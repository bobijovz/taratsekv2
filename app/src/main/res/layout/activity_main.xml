<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_dock_header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark" />

        <!--<TextView
            android:id="@+id/tv_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="20dp"
            android:text="Sample Text"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />-->


        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_dock_header"

            android:background="#ccc" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_menu_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:tabGravity="fill"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_dock_header"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-25dp"
            app:fabSize="normal"
            app:rippleColor="@color/colorPrimary"
            app:srcCompat="@drawable/ic_action_tara_tsek" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_dock_header"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-22dp"
            android:layout_toLeftOf="@id/fab"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="0dp"
            app:fabSize="mini"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_notifications_white_24dp"></android.support.design.widget.FloatingActionButton>

        <TextView
            android:id="@+id/tv_notification_badge"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignRight="@id/fab_notification"
            android:layout_alignTop="@id/fab_notification"
            android:background="@drawable/badge_circle"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_dock_header"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-22dp"
            android:layout_toLeftOf="@id/fab_notification"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_face_white_24dp" />

        <LinearLayout
            android:id="@+id/layout_fab_label_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/layout_fab_container"
            android:layout_alignTop="@id/layout_fab_container"
            android:layout_below="@id/fab"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/layout_fab_container"
            android:gravity="right"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Blood Glucose"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Insulin"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Medication"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Event"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Memo"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="A1c"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Meal"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_fab_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/fab"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_glucose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_insulin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_medication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_A1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_face_black_24dp" />
        </LinearLayout>


    </RelativeLayout>
</layout>